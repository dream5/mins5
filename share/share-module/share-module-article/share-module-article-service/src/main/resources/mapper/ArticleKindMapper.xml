<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 文字种类 -->
<mapper namespace="com.mins5.share.business.article.dao.ArticleKindDao">

	<resultMap type="com.mins5.share.business.article.domain.ArticleKind" id="ArticleKind">
		<id property="articleKindId" column="article_kind_id"/>
		<result property="kindName" column="kind_name"/>
		<result property="status" column="status"/>
		<result property="updateTime" column="update_time"/>
		<result property="createTime" column="create_time"/>
		<result property="adminId" column="admin_id"/>
		<result property="parentKindId" column="parent_kind_id"/>
	</resultMap>
	<!-- 查询所有有效分类 -->
	<select id="findAllArticleKind"  resultMap="ArticleKind">
		select article_kind_id,kind_name,status,parent_kind_id from article_kind where status = 1 
	</select>

</mapper>