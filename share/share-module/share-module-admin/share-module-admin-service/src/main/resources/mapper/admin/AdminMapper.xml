<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mins5.share.admin.dao.AdminDao">

	<resultMap type="com.mins5.share.admin.domain.Admin" id="Admin">
		<id property="adminId" column="admin_id"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="createDate" column="create_date"/>
	</resultMap>
	
	<insert id="save" useGeneratedKeys="true" keyProperty="adminId">
		insert into admin (username, password, create_date) values (#{username}, #{password}, #{createDate})
	</insert>
	
	<delete id="deleteById" parameterType="long">
		delete from admin where admin_id = #{adminId}
	</delete>
	
	<update id="update">
		update admin
		<set>
			<if test="username != null">username = #{username},</if>
			<if test="password != null">password = #{password},</if>
			<if test="createDate != null">create_date = #{createDate},</if>
		</set>
		where admin_id = #{adminId}
	</update>
	
	<select id="findById" parameterType="long" resultMap="Admin">
		select * from admin where admin_id = #{adminId}
	</select>
	
	<select id="findByUsernameAndPassword" resultMap="Admin">
		select * from admin where username = #{username} and password = #{password}
	</select>

</mapper>